<h1>Shelter Pets</h1>

<section id="shelter_pets">
  <% @pets.each do |pet| %>
    <% if pet.shelter_id == @shelter.id %>
      <%= image_tag(pet.image, size: "200x200") %><br/>
      <%= link_to "#{pet.name}", "/pets/#{pet.id}" %><br/>
      <%= pet.age %><br/>
      <%= pet.sex %><br/>
      <%= link_to 'Update Pet', "/pets/#{pet.id}/edit" %><br/>
      <%= button_to 'Delete', "/pets/#{pet.id}", method: :delete %><br/>
    <%  end %>
  <%  end %>
</section>
