<h1>Edit This Pet</h1>

<section id="edit_pet">
  <%= form_tag "/pets/#{@pet.id}", method: :patch do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, @pet.name %><br/>
    <%= label_tag :description %>
    <%= text_field_tag :description, @pet.description %><br/>
    <%= label_tag :age %>
    <%= text_field_tag :age, @pet.age %><br/>
    <%= label_tag :sex %>
    <%= text_field_tag :sex, @pet.sex %><br/>
    <%= label_tag :image %>
    <%= url_field_tag :image, @pet.image %><br/>
    <%= submit_tag 'Submit' %>
  <% end %>
</section>
