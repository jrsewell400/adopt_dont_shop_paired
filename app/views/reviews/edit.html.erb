<h1>Edit This Review</h1>

<section id="edit_review">
  <%= form_tag "/shelters/#{@review.shelter_id}/review/#{@review.id}", method: :patch do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, @review.title %><br/>
    <%= label_tag :content %>
    <%= text_field_tag :content, @review.content %><br/>
    <%= label_tag :rating %>
    <%= text_field_tag :rating, @review.rating %><br/>
    <%= label_tag :picture %>
    <%= url_field_tag :picture, @review.picture %><br/>
    <%= submit_tag 'Submit' %>
  <% end %>
</section>
